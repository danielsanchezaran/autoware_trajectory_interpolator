<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <arg name="trajectory_interpolator_param_path" default="$(find-pkg-share autoware_trajectory_interpolator)/config/trajectory_interpolator.param.yaml"/>

  <arg name="smoother_param_path" default="$(find-pkg-share autoware_trajectory_interpolator)/config/velocity_smoothing/default_velocity_smoother.param.yaml"/>
  <arg name="jerk_filtered_smoother_param_path" default="$(find-pkg-share autoware_trajectory_interpolator)/config/velocity_smoothing/JerkFiltered.param.yaml"/>
  <arg name="velocity_smoother_param_path" default="$(find-pkg-share autoware_trajectory_interpolator)/config/velocity_smoothing/default_velocity_smoother.param.yaml"/>
  <arg name="common_smoother_param_path" default="$(find-pkg-share autoware_trajectory_interpolator)/config/velocity_smoothing/default_common.param.yaml"/>

  <arg name="elastic_band_param_path" default="$(find-pkg-share autoware_trajectory_interpolator)/config/trajectory_smoothing/elastic_band_smoother.param.yaml"/>

  <arg name="input_traj" default="mtr/trajectory"/>
  <arg name="input_trajectories" default="mtr/trajectories"/>
  <arg name="output_traj" default="smoothed/mtr/trajectory"/>
  <arg name="output_trajectories" default="smoothed/mtr/trajectories"/>

  <node pkg="autoware_trajectory_interpolator" exec="autoware_trajectory_interpolator_node" name="trajectory_interpolator_node" output="screen">
    <param from="$(var trajectory_interpolator_param_path)" allow_substs="true"/>
    <param from="$(var smoother_param_path)" allow_substs="true"/>
    <param from="$(var jerk_filtered_smoother_param_path)" allow_substs="true"/>
    <param from="$(var velocity_smoother_param_path)" allow_substs="true"/>
    <param from="$(var common_smoother_param_path)" allow_substs="true"/>
    <param from="$(var elastic_band_param_path)" allow_substs="true"/>
   <remap from="~/output/trajectory" to="$(var output_traj)"/>
   <remap from="~/output/trajectories" to="$(var output_trajectories)"/>
   <remap from="~/input/traj" to="$(var input_traj)"/>
   <remap from="~/input/trajectories" to="$(var input_trajectories)"/>
   <remap from="~/input/odometry" to="/localization/kinematic_state"/>
   <remap from="~/input/acceleration" to="/localization/acceleration"/>
   <remap from="~/input/previous_trajectory" to="/planning/scenario_planning/trajectory"/>
  </node>
</launch>

<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <arg name="param_path" default="$(find-pkg-share autoware_trajectory_interpolator)/config/trajectory_interpolator.param.yaml"/>
  <arg name="input_traj" default="mtr/trajectory"/>
  <arg name="output_traj" default="smoothed/mtr/trajectory"/>

  <node pkg="autoware_trajectory_interpolator" exec="autoware_trajectory_interpolator_node" name="trajectory_interpolator_node" output="screen">
    <param from="$(var param_path)" allow_substs="true"/>
   <remap from="~/output/traj" to="$(var output_traj)"/>
   <remap from="~/input/traj" to="$(var input_traj)"/>
   <remap from="~/input/odometry" to="/localization/kinematic_state"/>
  </node>
</launch>
